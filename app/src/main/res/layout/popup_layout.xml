    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/speechStartTime_label"
        android:text="@string/speech_startTime_label"
        android:layout_gravity="right"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:id="@+id/startTime"
        android:ems="11"
        android:hint="@string/speechStartTimeHint" />

    <TextView
        android:layout_height="281dp"
        android:layout_width="wrap_content"
        android:id="@+id/speechEndTime_label"
        android:text="@string/speech_endTime_label"
        android:layout_gravity="right"
        android:layout_row="4"
        android:layout_column="0" />

    <EditText
        android:id="@+id/endTime"
        android:ems="11"
        android:hint="@string/speechEndTimeHint"/>

