<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <!--Uhrzeit-->
    <TextView
        android:id="@+id/value_startTime"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_width="60dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/value_endTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/value_startTime"
        android:layout_alignLeft="@+id/value_startTime"
        android:layout_alignStart="@+id/value_startTime"
        android:layout_alignRight="@+id/value_startTime"
        android:layout_alignEnd="@+id/value_startTime"
        android:lineSpacingExtra="5dp"
        />

    <!-- Details zum Vortrag, initiale größe für die spalte festlegen-->
    <TextView
        android:id="@+id/value_speech_speechId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/speechTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/value_startTime"
        android:textStyle="bold"
        android:lineSpacingExtra="5dp"/>

    <TextView
        android:id="@+id/speakerName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/speechTitle"
        android:layout_alignStart="@+id/speechTitle"
        android:layout_alignEnd="@+id/speechTitle"
        android:layout_alignLeft="@+id/speechTitle"
        android:layout_alignRight="@+id/speechTitle"
        android:layout_marginBottom="11dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerName"
        android:layout_alignLeft="@+id/speakerName"
        android:layout_alignStart="@+id/speakerName"
        android:text="@string/speechLocation"
        android:id="@+id/stringLocation"/>

    <TextView
        android:id="@+id/speechLocation"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/speakerName"
        android:layout_toRightOf="@+id/stringLocation"
        android:layout_alignEnd="@+id/speakerName"
        android:layout_alignRight="@+id/speakerName" />

    <ImageView
        android:src="@drawable/ic_mode_edit_yellow_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/speechLocation"
        android:layout_toLeftOf="@+id/button_delete"
        android:id="@+id/button_editSpeech"
        android:visibility="gone"
        android:adjustViewBounds="false" />

    <ImageView
        android:src="@drawable/ic_clear_x_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/speechLocation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:id="@+id/button_delete"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/speakerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerName"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/speechSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerInfo"
        android:visibility="gone"/>

</RelativeLayout>