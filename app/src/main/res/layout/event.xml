<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="1dp"
    tools:context=".activities.EventActivity">
    <!-- tools:context="com.senacor.devconfapp.activities.EventActivity" -->
    <!-- layout_weight of ImageView and
    weightSum in LinearLayout -->


    <!-- DevCon Details-->
    <TextView
        android:id="@+id/event_date"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/event_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/event_date" />

    <!-- folgende Linie zum Beginn der Seite hat keinerlei relationen-->
    <View
        android:id="@+id/lineDevCon"
        android:layout_height="3dp"
        android:background="@color/senacorBlueShine"
        android:layout_width="wrap_content"
        android:layout_below="@+id/event_name"
        android:layout_alignLeft="@+id/event_name"
        android:layout_alignStart="@+id/event_name"
        android:layout_alignEnd="@+id/event_name"
        android:layout_alignRight="@+id/event_name"/>

    <TextView
        android:id="@+id/event_place"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/lineDevCon"
        android:layout_alignLeft="@+id/event_name"
        android:layout_alignStart="@+id/event_name"
        android:layout_toLeftOf="@+id/joinButton" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineDevCon"
        android:layout_alignEnd="@+id/event_name"
        android:layout_alignRight="@+id/event_name"/>

    <!-- Agenda-->
    <TextView
        android:id="@+id/agenda"
        android:text="@string/agendaTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@+id/joinButton"
        android:layout_alignLeft="@id/event_date"
        android:layout_alignStart="@id/event_date"/>

    <ListView
        android:id="@+id/list_speeches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agenda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--<ImageButton
        android:id="@+id/addSpeechButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"/>-->

</RelativeLayout>






