<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/value_event_eventId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/value_event_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_eventId" />

    <TextView
        android:id="@+id/value_event_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_name"/>

   <TextView
        android:id="@+id/value_event_streetAndNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_place"/>

    <TextView
        android:id="@+id/value_event_postalCodeAndCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_streetAndNumber"/>

    <TextView
        android:id="@+id/value_event_date"
        android:textColor="@color/senacorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_postalCodeAndCity"/>

    <ImageView
        android:src="@drawable/ic_mode_edit_yellow_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_name"
        android:layout_toLeftOf="@+id/button_deleteEvent"
        android:id="@+id/button_editEvent"
        android:visibility="gone"
        android:adjustViewBounds="false" />
    <!--
        android:layout_below="@+id/value_event_date"
        android:layout_marginTop="11dp"

        delete
        android:layout_marginTop="11dp"
        android:layout_below="@+id/value_event_date"
        android:layout_RightOf="@+id/button_editEvent"-->

    <ImageView
        android:src="@drawable/ic_clear_x_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_deleteEvent"
        android:layout_below="@+id/value_event_name"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>