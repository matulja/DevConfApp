<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/value_event_eventId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/value_event_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_eventId"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_editEvent"/>

    <TextView
        android:id="@+id/value_event_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_name"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_editEvent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/value_event_streetAndNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_place"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_editEvent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/value_event_postalCodeAndCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_streetAndNumber"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_editEvent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/value_event_date"
        android:textColor="@color/senacorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_event_postalCodeAndCity"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_editEvent"/>

    <ImageView
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/button_editEvent"
        android:visibility="gone"
        android:adjustViewBounds="false" />

    <ImageView
        android:src="@drawable/ic_clear_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_deleteEvent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_editEvent"
        android:visibility="gone"/>
</RelativeLayout>